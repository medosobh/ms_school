<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_school_teacher" model="ir.ui.view">
        <field name="name">school.teacher.form</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h2>
                        <field name="name"/>
                    </h2>
                    <field name="photo" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/>
                    <group>
                        <group string="Personal Information">
                            <field name="employee_id"/>
                            <field name="birth_date"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="address"/>
                            <field name="description"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group string="Responsability">
                            <field name="res_grade_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="res_section_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="res_classroom_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="res_subject_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group string="Assignment">
                            <field name="grade_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="subject_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="classroom_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_tree_school_teacher" model="ir.ui.view">
        <field name="name">school.teacher.tree</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
            </tree>
        </field>
    </record>
    <record id="action_school_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="school_submenu_teachers" name="Teachers" parent="school_menu_teachers" action="action_school_teacher"/>
</odoo>