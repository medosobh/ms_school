            </field>
        </record>
        <record id="action_school_book" model="ir.actions.act_window">
            <field name="name">Books</field>
            <field name="res_model">school.book</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="school_submenu_books" name="Books" parent="school_menu_subjects" action="action_school_book" sequence="42"/>
    </data>
</odoo>