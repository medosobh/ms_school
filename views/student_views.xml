<odoo>
    <record id="view_form_school_student" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                        <field name="state" widget="statusbar"
                               options="{'clickable': '1'}"/>
                    </header>
                <sheet>
                
                    <field name="photo" widget="image" class="oe_avatar"
                                   options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/>
                    <group>
                        <group string="Persinal Information">
                            <field name="name"/>
                            <field name="student_id"/>
                            <field name="date_of_birth"/>
                            <field name="gender"/>
                            <field name="parent_id"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="address"/>
                        </group>
                        <group string="School Information">
                            <field name="grade_id"/>
                            <field name="status"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_tree_school_student" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="student_id"/>
                <field name="grade_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <record id="action_school_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="school_menu_root" name="School"/>
    <menuitem id="school_menu_students" name="Students" parent="school_menu_root" action="action_school_student"/>
</odoo>